@model List<Brend>
@{
    ViewBag.Title = "Бренды";
    Layout = "_Layout";
}
<h2>Бренды</h2>
<a asp-action="Create" asp-controller="Brends">Добавить бренд</a>
<div class="table_section">

    @if (@Model.Count == 0)
    {
    <p>Бренды еще не добавлены</p>
    }
    else
    {
        <table style="width: 100%;">
            <tr>
                <th>Id</th>
                <th>Название</th>
            </tr>
            @foreach (var brand in @Model)
            {
        <tr>
            <td>@brand.Id</td>
            <td>@brand.Name</td>
            <td>
                @using (Html.BeginForm("Delete", "Brends", new { id = @brand.Id }))
                {
                    <button type="submit">Delete</button>
                }
            </td>
        </tr>
            }
        </table>
    }
</div>
