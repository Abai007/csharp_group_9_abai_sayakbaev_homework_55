@model Order


@{

    ViewBag.Title = "Order Product";

    Layout = "_Layout";

}


<h2>Fill Up the form</h2>


<div class="row">

    <div class="col-md-6">

        <form asp-action="Create" asp-controller="Orders" method="post">

            <div class="form-row">

                <label for="">

                    Имя

                    <input asp-for="Name" type="text">
                    <span asp-validation-for="Name" />

                </label>

            </div>

            <div class="form-row">

                <label for="">

                    Адрес

                    <input asp-for="Address" type="text">
                    <span asp-validation-for="Address" />

                </label>

            </div>

            <div class="form-row">

                <label for="">

                    Номер телефона

                    <input asp-for="ContactPhone" type="text">
                    <span asp-validation-for="ContactPhone" />

                </label>

            </div>

            <div class="form-row">

                <label for="">

                    Товар

                    <input disabled type="text" value="@Model.Product.Name">

                </label>

                <input asp-for="ProductId" type="hidden" value="@Model.Product.Id">

            </div>

            <button type="submit">Заказать</button>

        </form>
        @section Scripts
        {
            @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
        }

    </div>

</div>
